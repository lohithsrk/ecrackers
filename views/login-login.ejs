<!-- Login Content Area End Here -->
<script>
  const loginForm = document.getElementById('loginForm')
document.querySelector('.frame').classList.add('hide')
  document.querySelector('.frame1').classList.add('hide')
  document.querySelector('.modal .button').addEventListener('click', () => {
      document.querySelector('.frame').classList.add('hide')
      document.querySelector('.modal').style.display = 'none'
  })
  loginForm.addEventListener('submit', async e => {
    e.preventDefault()

    const email = loginForm.email.value
    const password = loginForm.password.value

    try {
      const res = await fetch('/login', {
        method: 'POST',
        body: JSON.stringify({
          email,
          password
        }),
        headers: {
          'Content-Type': 'application/json'
        },
      })
      const data = await res.json()
      if (data.err) {
            document.querySelector('.frame').classList.remove("hide")
            document.querySelector('.modal').style.display = 'block'
        }
      else {
        //alert("Successfully logged in")
          document.querySelector('.frame1').classList.remove("hide")
        document.querySelector('.loginModal').style.display = 'block'
        document.querySelector('.redirectHome').addEventListener('click',()=>{window.location.assign("/")})
      }
    } catch (e) {
      console.log(e)
    }
  })
  var emailPosition=document.querySelector('.emailPlace');
  var passwordPosition=document.querySelector('.passwordPlace');
  const DisplayRemove=()=>{
    document.querySelector('.frame').classList.add("hide")
    document.querySelector('.modal').style.display = 'none'
  }
  emailPosition.addEventListener('click',()=>DisplayRemove())
  passwordPosition.addEventListener('click',()=>DisplayRemove())
</script>
